{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Time Mate",
  "description": "Time Mate is a simple extension that helps you track your time spent on different websites.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"]
}
