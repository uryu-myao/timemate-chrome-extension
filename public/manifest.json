{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Time Mate",
  "description": "Time Mate is a simple extension that helps you track your time spent on different websites.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/logos/logo-light-16.png",
      "32": "icons/logos/logo-light-32.png",
      "48": "icons/logos/logo-light-48.png",
      "128": "icons/logos/logo-light-128.png"
    }
  },
  "icons": {
    "16": "icons/logos/logo-light-16.png",
    "32": "icons/logos/logo-light-32.png",
    "48": "icons/logos/logo-light-48.png",
    "128": "icons/logos/logo-light-128.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"]
}
